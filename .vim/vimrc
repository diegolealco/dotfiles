if isdirectory($HOME.'/.cache/vim') == 0
    call mkdir($HOME.'/.cache/vim/swap', 'p')
    call mkdir($HOME.'/.cache/vim/backup', 'p')
    call mkdir($HOME.'/.cache/vim/undo', 'p')
endif

set directory=~/.cache/vim/swap//
